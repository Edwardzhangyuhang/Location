<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="loc_task_run_interval"
        android:title="@string/loc_task_run_interval"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="loc_min_accuracy"
        android:title="@string/loc_min_accuracy"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="loc_update_min_distance"
        android:title="@string/loc_update_min_distance"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="loc_update_min_time"
        android:title="@string/loc_update_min_time"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="loc_provide_check_time"
        android:title="@string/loc_provide_check_time"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="loc_update_pause_idle_time"
        android:title="@string/loc_update_pause_idle_time"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

</PreferenceScreen>